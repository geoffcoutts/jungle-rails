<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Average Rating</dt>
          <dd><%= @product.average_review %> / 5</dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= humanized_money_with_symbol @product.price %></dd>
        </dl>
        <%= link_to add_item_cart_path(product_id: @product.id), class: 'btn btn-primary', method: :put do %>
          <%= fa_icon "shopping-cart", text: 'Add' %>
        <% end %>
      </div>
    </div>
    <div class ="row">
      <!-- Show review submission form if user is logged in -->
      <div class="col-sm-6">
        <% if current_user %>
          <h2>Make a Review</h2>
          <%= form_for :review, url: product_reviews_path(@product, @review) do | form | %>
            <%= form.label :rating %>
            <%= form.select :rating, options_for_select(1..5), { include_blank: true } %>
            <br>
            <%= form.label :description %>
            <br>
            <%= form.text_area :description, style: 'width:100%; resize: none', rows: 5 %>
            <br>
            <%= form.submit 'Submit Review', class: 'btn btn-primary' %>
          <% end %>
        <% end %>
      </div>
      <!-- Show reviews if there are any, otherwise prompt user to submit a review -->
      <div class="col-sm-6">
        <% if @product.reviews.any? %>
          <table class="table table-bordered">
            <thead>
              <tr>
                <h3>Reviews</h3>
              </tr>
              <tr>
                <th>Review By</th>
                <th>Review</th>
                <th>Rating</th>
              </tr>
            </thead>
            <tbody>
              <% @product.reviews.reverse.each do | review | %>
                 <%= render 'review', review: review %>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <h2>Be the first to review!</h2>
        <% end %>
      </div>
    </div>
  </article>
</section>
