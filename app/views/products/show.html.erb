<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Average Rating</dt>
          <dd><%= @product.reviews.average(:rating).round(2) %> / 5</dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= humanized_money_with_symbol @product.price %></dd>
        </dl>
        <%= link_to add_item_cart_path(product_id: @product.id), class: 'btn btn-primary', method: :put do %>
          <%= fa_icon "shopping-cart", text: 'Add' %>
        <% end %>
      </div>
    </div>
    <!-- Show review submission form if user is logged in -->
    <div class ="row">
      <div class="col-sm-6">
        <% if current_user %>
          <h3>Make a Review</h3>
          <%= form_for :review, url: product_reviews_path(@product, @review) do | f | %>
            <%= f.label :rating %>
            <%= f.select :rating, options_for_select(1..5), { include_blank: true } %>
            <br>
            <%= f.label :description %>
            <br>
            <%= f.text_area :description, style: 'width:100%; resize: none', rows: 10 %>
            <br>
            <%= f.submit 'Submit Review', class: 'btn btn-primary' %>
          <% end %>
        <% end %>
      </div>
      <div class="col-sm-6">
        <table class="table table-bordered">
          <thead>
            <tr>
              <h3>Reviews</h3>
            </tr>
            <tr>
              <th>Review By</th>
              <th>Review</th>
              <th>Rating</th>
            </tr>
          </thead>
          <tbody>
            <% @product.reviews.each do | review | %>
              <tr>
                <td><%= review.user.first_name %> <%= review.user.last_name %></td>
                <td><%= review.description %></td>
                <td><%= review.rating %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </article>
</section>
